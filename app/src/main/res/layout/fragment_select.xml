<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.others.SelectFragment">


    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/image"
        android:contentDescription="@string/previewimage"/>

    <Button
        android:id="@+id/btnCamera"
        android:text="@string/camera"
        android:backgroundTint="@color/green"
        android:textAllCaps="false"
        android:layout_below="@+id/previewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"/>

    <Button
        android:id="@+id/btnGallery"
        android:layout_toRightOf="@+id/btnCamera"
        android:text="@string/gallery"
        android:layout_below="@+id/previewImage"
        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/green"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCamera"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"/>

    <!--
    <Button
        android:id="@+id/btnPredict"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/btnGallery"
        android:text="@string/predict"
        android:layout_below="@+id/previewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->

    <TextView
        android:id="@+id/tv_results"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btnCamera"/>

</androidx.constraintlayout.widget.ConstraintLayout>